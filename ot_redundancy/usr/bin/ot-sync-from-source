#!/bin/bash
################################################################################
#   Sync projects from a remote Odoo installation.
#
#
################################################################################

R='\033[0;31m'
Y='\033[1;33m'
G='\033[0;32m'
B='\033[0;34m'

echo "DB replication is made separately from this script and is excluded from this message"

echo "Syncing installed apt packages ..."
ot-apt-sync
if [ $? -eq 0 ]; then
    echo -e "${G}Success"
else
    echo -e "${R}Failure"
fi

echo "Syncing installed pip3 packages ..."
ot-pip-sync
if [ $? -eq 0 ]; then
    echo -e "${G}Success"
else
    echo -e "${R}Failure"
fi

echo "Syncing project code ..."
ot-project-sync
if [ $? -eq 0 ]; then
    echo -e "${G}Success"
else
    echo -e "${R}Failure"
fi

echo "Syncing filestore ..."
ot-attachments-sync
if [ $? -eq 0 ]; then
    echo -e "${G}Success"
else
    echo -e "${R}Failure"
fi

echo "Syncing configuration ..."
ot-conf-sync
if [ $? -eq 0 ]; then
    echo -e "${G}Success"
else
    echo -e "${R}Failure"
fi

#service odoo restart  # No restart: Odoo disabled since it can't connect
                            # to a RO db.
## End
# Todo: Make som smart return code describing what went wrong
ot-write-summary $0
exit 0
